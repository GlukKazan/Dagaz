(define step (
  $1 (verify empty?)
  add
))

(game
  (title "Surakarta")

  (move-sound "Audio\Pickup.wav")
  (release-sound "Audio\Pickup.wav")
  (capture-sound "")
  (drop-sound "")

  (option "animate captures"  false)
  (option "smart moves"       false)

  (players White Black)
  (turn-order White Black)

  (board
      (image "images/surakarta/board.bmp")
      (grid
         (start-rectangle 94 94 129 129)
         (dimensions
