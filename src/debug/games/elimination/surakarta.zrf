      )
  )

  (piece
     (name Man)
     (image White "images/surakarta/white.bmp"
            Black "images/surakarta/black.bmp")
     (moves
         (move-type normal-type)
         (step n) (step e) (step w) (step s)
     )
  )

  (board-setup
     (White (Man a1 b1 c1 d1 e1 f1 a2 b2 c2 d2 e2 f2))
     (Black (Man a6 b6 c6 d6 e6 f6 a5 b5 c5 d5 e5 f5))
